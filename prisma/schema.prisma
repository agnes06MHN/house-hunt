generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String
  password  String
  favorites Favorite[]

  @@map("user")
}

model Favorite {
  id     String  @id @default(uuid())
  title  String
  link   String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("favorite")
}
